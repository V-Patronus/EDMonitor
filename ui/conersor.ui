   <string notr="true">/* ===== MODO OSCURO + HORIZONTAL + OPCIONES CARGADAS ===== */

#ConverterHorizontalDarkReady {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 #0f172a, stop:1 #1e293b);
    border-radius: 16px;
}

#headerFrame {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #1e40af, stop:1 #3b82f6);
    border-radius: 16px 16px 0 0;
    padding: 20px;
}

#titleLabel {
    color: #f8fafc;
    font-size: 28px;
    font-weight: 700;
}

#subtitleLabel {
    color: rgba(248, 250, 252, 0.8);
    font-size: 14px;
}

#contentFrame {
    background: rgba(30, 41, 59, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 16px;
    margin: 20px;
    
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

#leftFrame, #rightFrame {
    background: rgba(15, 23, 42, 0.5);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 16px;
    padding: 25px;
    
    backdrop-filter: blur(5px);
    box-shadow: 4px 4px 16px rgba(0, 0, 0, 0.3);
}

#inputLineEdit, #outputLineEdit {
    background: transparent;
    color: #f8fafc;
    border: none;
    border-bottom: 2px solid rgba(59, 130, 246, 0.4);
    border-radius: 0px;
    padding: 14px 0px;
    font-size: clamp(20px, 3vw, 32px);
    font-weight: 500;
    
    selection-background-color: #3b82f6;
    selection-color: #ffffff;
}

#inputLineEdit:focus, #outputLineEdit:focus {
    border-bottom-color: #60a5fa;
    box-shadow: 0 2px 12px rgba(96, 165, 250, 0.3);
}

#inputLineEdit::placeholder, #outputLineEdit::placeholder {
    color: #64748b;
    font-style: italic;
}

/* ===== COMBOS CON OPCIONES CARGADAS ===== */
#comboFrom, #comboTo {
    background: rgba(30, 41, 59, 0.8);
    color: #e2e8f0;
    border: 1px solid rgba(59, 130, 246, 0.4);
    border-radius: 12px;
    padding: 12px 16px;
    font-size: 14px;
    font-weight: 500;
    
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

#comboFrom:hover, #comboTo:hover {
    border-color: rgba(96, 165, 250, 0.6);
    box-shadow: 0 4px 12px rgba(96, 165, 250, 0.2);
}

/* ===== ITEMS DEL COMBO (MODO OSCURO) ===== */
#comboFrom::item, #comboTo::item {
    background: #1e293b;
    color: #e2e8f0;
    padding: 8px 12px;
}

#comboFrom::item:selected, #comboTo::item:selected {
    background: #3b82f6;
    color: #ffffff;
}

#comboFrom::item:hover, #comboTo::item:hover {
    background: rgba(59, 130, 246, 0.2);
}

/* ===== BOTÓN SWAPPER ===== */
#btnSwap {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #10b981, stop:1 #059669);
    color: #ffffff;
    border: none;
    border-radius: 50%;
    width: 56px;
    height: 56px;
    font-size: 24px;
    font-weight: 700;
    
    box-shadow: 0 4px 20px rgba(16, 185, 129, 0.4);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

#btnSwap:hover {
    transform: rotate(180deg) scale(1.15);
    box-shadow: 0 6px 25px rgba(16, 185, 129, 0.5);
}

/* ===== BOTONES DE ACCIÓN ===== */
#btnConvert, #btnClear {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #3b82f6, stop:1 #2563eb);
    color: #ffffff;
    border: none;
    border-radius: 12px;
    padding: 16px 32px;
    font-size: 16px;
    font-weight: 600;
    min-width: 120px;
    
    box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

#btnConvert:hover, #btnClear:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #60a5fa, stop:1 #3b82f6);
    transform: translateY(-3px);
    box-shadow: 0 6px 25px rgba(59, 130, 246, 0.5);
}

/* ===== ETIQUETAS OSCURAS ===== */
#fromLabel, #toLabel {
    color: #94a3b8;
    font-size: 14px;
    font-weight: 600;
    padding-bottom: 8px;
}

/* ===== SCROLLBARS OSCUROS ===== */
QScrollBar:vertical {
    background: transparent;
    width: 8px;
    border-radius: 4px;
}

QScrollBar::handle:vertical {
    background: rgba(96, 165, 250, 0.6);
    border-radius: 4px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(96, 165, 250, 0.8);
    transform: scale(1.1);
}

/* ===== RESPONSIVE ===== */
@media screen and (max-width: 800px) {
    #inputLineEdit, #outputLineEdit {
        font-size: 24px;
    }
    
    #btnConvert, #btnClear {
        padding: 12px 24px;
        font-size: 14px;
    }
}
